<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".BuyCoinActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="127dp"
            android:layout_marginEnd="179dp"
            android:text="Coin"
            style="@style/TitleTextStyle"/>

        <Button
            android:id="@+id/closeButton"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="308dp"
            android:layout_marginRight="308dp"
            android:text="back"
            android:src="@drawable/ic_close" />

        <LinearLayout
            android:id="@+id/coinContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/optionSelect_1"
                style="@style/OptionStyle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="10 Coin"
                    style="@style/TextViewStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="100.000VND"
                    style="@style/TextViewStyle" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/optionSelect_2"
                style="@style/OptionStyle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="100 Coin"
                    style="@style/TextViewStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1.000.000VND"
                    style="@style/TextViewStyle" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/optionSelect_3"
                style="@style/OptionStyle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="200 Coin"
                    style="@style/TextViewStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2.000.000VND"
                    style="@style/TextViewStyle" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/optionSelect_4"
                style="@style/OptionStyle">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="500 Coin" />

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="5.000.000VND" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>