<resources>


    <!-- Style for TextView -->
    <style name="TextViewStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style for Title TextView -->
    <style name="TitleTextStyle" parent="TextViewStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style for Button -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Style for RelativeLayout Options -->
    <style name="OptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="SettingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SaveButton">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>